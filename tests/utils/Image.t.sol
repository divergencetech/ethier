pragma solidity ^0.8.15;

import "forge-std/Test.sol";
import "forge-std/console2.sol";
import "openzeppelin-contracts/utils/Base64.sol";

import {Image, Rectangle} from "../../contracts/utils/Image.sol";

//solhint-disable func-name-mixedcase
contract ImageTest is Test {
    using Image for bytes;

    function testFill() public {
        // 2x2 image
        bytes memory bgrPixels = new bytes(4 * 3);

        bgrPixels.fill(0xabcdef);
        assertEq(
            keccak256(bgrPixels),
            keccak256(hex"efcdabefcdabefcdabefcdab")
        );
    }

    function testFillLarge() public {
        // 4x4 image
        bytes memory bgrPixels = new bytes(16 * 3);

        bgrPixels.fill(0xabcdef);
        assertEq(
            keccak256(bgrPixels),
            keccak256(
                hex"efcdabefcdabefcdabefcdabefcdabefcdabefcdabefcdabefcdabefcdabefcdabefcdabefcdabefcdabefcdabefcdab"
            )
        );
    }

    function testAlphaBlend() public {
        assertEq(Image.alphaBlend(0x012345, 0xffabcdef), 0xabcdef);
        assertEq(Image.alphaBlend(0x012345, 0x00abcdef), 0x012345);
        assertEq(Image.alphaBlend(0x000000, 0x12ffffff), 0x121212);
        assertEq(Image.alphaBlend(0xffffff, 0x12000000), 0xededed);
    }

    function testAlphaFrame() public {
        bytes memory bgrPixels = hex"012345012345000000ffffff";
        bytes memory abgr = hex"ffabcdef00abcdef12ffffff12000000";

        Rectangle memory rect = Rectangle({xMin: 0, yMin: 0, xMax: 2, yMax: 2});

        bgrPixels.alphaBlend(abgr, 2, rect);
        assertEq(bgrPixels, hex"abcdef012345121212ededed");
    }

    function testScaleBlock_2_2_3_3() public {
        bytes memory bgrPixels = hex"111111aaaaaa000000ffffff";
        bytes memory scaled = bgrPixels.scale(2, 3, 3);

        assertEq(
            scaled,
            hex"111111111111111111aaaaaaaaaaaaaaaaaa111111111111111111aaaaaaaaaaaaaaaaaa111111111111111111aaaaaaaaaaaaaaaaaa000000000000000000ffffffffffffffffff000000000000000000ffffffffffffffffff000000000000000000ffffffffffffffffff"
        );
    }

    function testScaleBlock_1_1_3_16() public {
        bytes memory bgrPixels = hex"111111";
        bytes memory scaled = bgrPixels.scale(1, 3, 16);

        assertEq(
            scaled,
            hex""
        );
    }

    function testScaleBlock_1_2_3_16() public {
        bytes memory bgrPixels = hex"111111222222";
        bytes memory scaled = bgrPixels.scale(1, 3, 16);

        assertEq(
            scaled,
            hex""
        );
    }

    function testScaleBlock_1_1_1_32() public {
        bytes memory bgrPixels = hex"11";
        bytes memory scaled = bgrPixels.scale(1, 1, 32);

        assertEq(
            scaled,
            hex""
        );
    }

    function testScaleBlock_2_2_3_16() public {
        bytes memory bgrPixels = hex"111111222222333333444444";
        bytes memory scaled = bgrPixels.scale(2, 3, 16);

        assertEq(
            scaled,
            hex""
        );
    }

    function testScaleBase64() public {
        bytes memory bgrPixels = hex"111111aaaaaa000000ffffff";
        bytes memory scaledThenEncoded = bytes(
            Base64.encode(bgrPixels.scale(2, 3, 3))
        );
        bytes memory encodedThenScaled = bytes(Base64.encode(bgrPixels)).scale(
            2,
            4,
            3
        );

        assertEq(scaledThenEncoded, encodedThenScaled);
    }
}
//solhint-enable func-name-mixedcase
